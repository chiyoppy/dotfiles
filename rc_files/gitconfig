[include]
    path = .gitconfig_local
[push]
    default = current
[color]
    diff   = auto
    status = auto
    branch = auto
    grep   = auto
[core]
    excludesfile = .gitignore
    editor       = vim
    attributesfile = .gitattributes_global
[alias]
    st   = status
    co   = checkout
    ci   = commit -v
    di   = diff
    br   = branch
    puhs = push
    psuh = push
    pus  = push
    puh  = push
    pl   = !git pull && git submodule update --init
[pager]
    log  = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
