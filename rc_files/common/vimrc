" file encodings
set encoding=utf-8
set fileencodings=utf-8,cp932,euc-jp

" general settings
set wrap
set showcmd
set cursorline
set smartcase
set showmatch
set matchtime=1

" view
set number
set ruler
set laststatus=2 "show status line at any time
set colorcolumn=120
highlight ColorColumn ctermbg = 239

" behavior
set backspace=indent,eol,start
set nobackup
set writebackup
set history=50
set hlsearch
set autoindent
set smartindent
set expandtab
set tabstop=2
set shiftwidth=2
set ignorecase
" autocmd BufWritePre * :%s/\s\+$//e "truncate line-tail space(s)
