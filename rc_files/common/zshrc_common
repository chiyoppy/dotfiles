export LANG=ja_JP.UTF-8
export EDITOR=vim

if [ -d ${HOME}/.zsh/zsh-completions/src ] ; then
  fpath=(${HOME}/.zsh/zsh-completions/src $fpath)
fi
autoload -U compinit
compinit

PROMPT="%F{green}%n%F{magenta} | %F{yello}%m%F{magenta} | %F{cyan}%~%F{magenta} > %f"
PROMPT2="%_%% "
SPROMPT="%r is correct? [n,y,a,e]: "

# display git info
autoload -Uz vcs_info
zstyle ':vcs_info:*' formats '[%b]'
zstyle ':vcs_info:*' actionformats '[%b|%a]'
precmd () {
    psvar=()
    LANG=en_US.UTF-8 vcs_info
    [[ -n "$vcs_info_msg_0_" ]] && psvar[1]="$vcs_info_msg_0_"
}
RPROMPT="%1(v|%F{green}%1v%f|)"

# coloring
export TERM=xterm-256color
zstyle ':completion:*' list-colors 'di=34' 'ln=35' 'so=32' 'ex=31' 'bd=46;34' 'cd=43;34'
export LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD

setopt auto_pushd
setopt auto_cd
setopt ignoreeof

alias df="df -H"
alias gti=git
alias it=git
alias gitp=git
alias got=git
alias g=git
alias gp=git
alias ks=ls
alias bim=vim
alias ex=vim

# run ls after cd
function chpwd() { ls }

# default editors
alias -s txt=less
vim_ext=(c rb php perl erb htm html css ini py md)
for t in $vim_ext; do
  alias -s $t=vim
done

# hitory settings
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt hist_ignore_dups # ignore duplication command history list
setopt share_history    # share command history data

export RAILS_ENV=development # default rails environment
export PYTHONDONTWRITEBYTECODE=1 # do not create pyc file
